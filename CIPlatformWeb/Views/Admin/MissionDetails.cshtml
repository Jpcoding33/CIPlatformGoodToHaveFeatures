@model MissionDetails;

@{
    ViewData["Title"] = "MissionDetail";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}



<div class="container-fluid">
    <div class="border-bottom">
        <h1 class="heading">Mission</h1>
    </div>
    <div class="d-flex justify-content-between flex-wrap mt-5 mb-4">
        <div class="input-group rounded position-relative search-bar mt-2">
            <input type="search" class="form-control rounded" placeholder="Search" id="search-bar" />
            <span class="search-icon"><i class="bi bi-search"></i></span>
        </div>
        <div class="mt-2">
            <a asp-controller="Admin" asp-action="AddMission" class="btn add-btn rounded-pill">
                <i class="bi bi-plus"></i>
                <span>Add</span>
            </a>
        </div>
    </div>
    <div class="table-div">
        <table id="missionTable" class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MissionLists)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.MissionType</td>
                        <td>@item.StartDate.Value.ToShortDateString()</td>
                        <td>@item.EndDate.Value.ToShortDateString()</td>
                        <td class="d-flex justify-content-center align-items-center">
                            <span>
                                <a asp-controller="Admin" asp-action="EditMission" asp-route-missionId="@item.MissionId" class="btn border-0 bg-transparent edit-btn">
                                    <i class="bi bi-pencil-square"></i> 
                                </a>
                            </span>
                            <span>
                                <a onclick="deleteMission(@item.MissionId)" class="btn border-0 bg-transparent del-btn">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var dataTable = $('#missionTable').DataTable({
            "pageLength": 5,
            pagingType: 'full_numbers',
            oLanguage: {
                oPaginate:
                {
                    sNext: '<i class="bi bi-chevron-right"></i>',
                    sPrevious: '<i class="bi bi-chevron-left"></i>',

                }
            },
            "language": {
                "paginate": {
                    "last": '<i class="bi bi-chevron-double-right"></i>',
                    "first": '<i class="bi bi-chevron-double-left"></i>'
                }
            }
        });
        $('#search-bar').keyup(function () {
            dataTable.search(this.value).draw();
        });
    });
    $('#mission').addClass('active');

    function deleteMission(missionId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't to delete!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#F88634',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: 'POST',
                    url: '/Admin/DeleteMission',
                    data: { "missId": missionId },
                    success: function () {
                        Swal.fire(
                            'Deleted!',
                            'Data has been deleted.',
                            'success'
                        ).then((result) => {
                            if (result.isConfirmed) {
                                location.reload();
                            }
                        });
                    },
                    error: function () {
                        console.log('error');
                    },
                });
            }
        })
    }
</script>