<script type="text/javascript">
    var tabs = document.querySelectorAll('.policy-tabs');

    tabs.forEach(function (tab) {
        tab.addEventListener('click', function () {
            // Remove the "active" class from all tabs
            tabs.forEach(function (t) {
                t.classList.remove('active');
            });
            // Add the "active" class to the clicked tab
            tab.classList.add('active');
        });
    });
    //--------------------
    $(document).ready(function () {
        $("#policy-content").scroll(function () {
            var scrollPos = $("#policy-content").scrollTop();

            var page1Top = $("#introduction").offset().top;
            var page2Top = $("#useCookie").offset().top;
            var page3Top = $("#cookiePref").offset().top;

            if ((scrollPos >= page1Top || scrollPos <= page1Top) && scrollPos < page2Top) {
                $("#link_1").addClass("active");
                $("#link_2").removeClass("active");
                $("#link_3").removeClass("active");
            } else {
                $("#link_1").removeClass("active");
            }

            if (scrollPos >= page2Top && scrollPos < page3Top) {
                $("#link_2").addClass("active");
                $("#link_1").removeClass("active");
                $("#link_3").removeClass("active");
            } else {
                $("#link_2").removeClass("active");
            }

            if (scrollPos >= page3Top) {
                $("#link_3").addClass("active");
                $("#link_1").removeClass("active");
                $("#link_2").removeClass("active");
            } else {
                $("#link_3").removeClass("active");
            }

        });
    });
</script>